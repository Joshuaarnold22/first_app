<h1><%= @post.markdown_title %></h1>
<% if @post.summary != nil %>
  <h3><%= @post.summary.description %></h3>
<% end %>
<div class="row">
  <div class="col-md-8">
    <p><%= @post.markdown_body %></p>
  </div>
  <div class="col-md-4">
    <% if policy(@post).edit? %>
      <%= link_to "Edit", edit_topic_post_path(@topic, @post), class: 'btn btn-success' %>
    <% end %>
  </div>
  <%= link_to "Create", new_post_summary_path(@post, @summary), class: 'btn btn-success' %>
</div>
