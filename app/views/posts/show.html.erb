<h1><%= @post.title %></h1>

<% if @post.summary.description != nil %>
  <h3><%= @post.summary.description %></h3>
<% end %>
<div class="row">
  <div class="col-md-8">
    <p><%= @post.body %></p>
  </div>
  <div class="col-md-4">
    <% if policy(@post).edit? %>
      <%= link_to "Edit", edit_topic_post_path(@topic, @post), class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
